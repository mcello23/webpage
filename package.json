{
  "name": "webpage-tests",
  "version": "1.0.0",
  "description": "Linting and tests for Marcelo's webpage",
  "private": true,
  "packageManager": "yarn@4.11.0",
  "engines": {
    "node": ">=22.20.0",
    "yarn": ">=4.0.0"
  },
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/jest/unit/ --coverage",
    "test:integration": "jest tests/jest/ --testPathIgnorePatterns=unit",
    "test:all": "jest --coverage",
    "test:jest": "./tests/jest/run-tests.sh",
    "test:k6": "./tests/k6/run-tests.sh",
    "test:puppeteer": "./tests/puppeteer/run-tests.sh",
    "test:reports": "yarn test:all --json --outputFile=tests/jest/reports/results-latest.json && cd tests/k6 && ./run-tests.sh && cd ../..",
    "generate-test-data": "node scripts/generate-test-data.js",
    "build:cloudflare": "mkdir -p tests/jest/reports tests/k6/reports && yarn test --passWithNoTests --json --outputFile=tests/jest/reports/results-latest.json && yarn generate-test-data && node scripts/prepare-cloudflare-build.js",
    "lint": "eslint . --ext .js,.html",
    "lint:fix": "eslint . --ext .js,.html --fix",
    "lint:css": "stylelint '**/*.css'",
    "lint:css:fix": "stylelint '**/*.css' --fix",
    "format": "prettier --write '**/*.{js,html,css,json}'",
    "format:check": "prettier --check '**/*.{js,html,css,json}'",
    "quality": "yarn lint && yarn lint:css && yarn format:check",
    "quality:fix": "yarn lint:fix && yarn lint:css:fix && yarn format"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@swc/core": "^1.14.0",
    "@swc/jest": "^0.2.39",
    "babel-jest": "^30.2.0",
    "cheerio": "^1.1.2",
    "eslint": "^9.38.0",
    "eslint-plugin-html": "^8.1.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.1",
    "prettier": "^3.6.2",
    "puppeteer": "^24.29.1",
    "sharp": "^0.34.4",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1"
  }
}
