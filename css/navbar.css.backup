/* ========================================
   CENTRALIZED NAVBAR STYLES
   Desktop-first responsive design
   ======================================== */

/* Ensure navbar.css takes highest priority */
html body nav.main-nav {
  z-index: 1000 !important;
}

/* BASE STYLES - Desktop Default (≥992px) */
.main-nav {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1000;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  height: 80px;
}

.nav-wrapper {
  padding: 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  position: relative;
}

/* Brand Logo */
.brand-logo {
  font-size: 1.15rem;
  font-weight: 500;
  transition: all 0.3s ease;
  line-height: 80px;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  color: inherit;
  text-decoration: none;
}

.brand-logo i {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
}

.brand-logo:hover {
  transform: translateX(-5px);
  opacity: 0.8;
}

/* Center Navigation - Desktop absolute positioning */
.center-nav {
  display: flex;
  gap: 72px;
  margin: 0;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  list-style: none;
  align-items: center;
}

/* Navigation Buttons */
.nav-btn {
  padding: 10px 24px;
  border-radius: 8px;
  border: 0;
  color: #fff;
  transition: all 0.25s ease;
  display: inline-flex;
  align-items: center;
  font-weight: 600;
  font-size: 0.95rem;
  letter-spacing: 0.3px;
  text-decoration: none;
  white-space: nowrap;
}

.nav-btn i {
  font-size: 18px;
  margin-right: 6px;
  color: rgba(255, 255, 255, 0.95);
}

.nav-btn-projects {
  background: linear-gradient(135deg, #5c6bc0, #3f51b5);
}

.nav-btn-frameworks {
  background: linear-gradient(135deg, #b66a50, #9b4b2f);
}

.nav-btn-certs {
  background: linear-gradient(135deg, #ff9800, #f57c00);
}

.nav-btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
  filter: brightness(1.1);
}

/* Social Navigation - Right aligned */
.social-nav {
  display: flex;
  gap: 16px;
  margin: 0;
  list-style: none;
  align-items: center;
}

.social-icon {
  font-size: 22px;
  color: #333;
  transition: all 0.3s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.social-icon:hover {
  transform: translateY(-4px) scale(1.15);
}

/* Social icon colors on hover */
.social-icon:has(.fa-github):hover {
  color: #fff;
  background-color: #333;
}

.social-icon:has(.fa-linkedin):hover {
  color: #fff;
  background-color: #0077b5;
}

.social-icon:has(.fa-discord):hover {
  color: #fff;
  background-color: #5865f2;
}

/* Mobile menu toggle button - hidden by default */
.mobile-menu-toggle {
  display: none;
  background: none;
  border: none;
  font-size: 28px;
  color: #333;
  cursor: pointer;
  padding: 8px;
  margin-left: auto;
}

/* ========================================
   TABLET STYLES (768px - 991px)
   ======================================== */
@media screen and (max-width: 991px) {
  .main-nav {
    height: auto;
    min-height: 70px;
  }

  .nav-wrapper {
    flex-wrap: wrap;
    padding: 15px 20px;
  }

  .brand-logo {
    font-size: 1rem;
    line-height: normal;
  }

  .brand-logo span {
    max-width: 250px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* Center nav moves below on tablet */
  .center-nav {
    position: static;
    transform: none;
    order: 3;
    width: 100%;
    flex-direction: column;
    gap: 12px;
    margin-top: 15px;
    padding-top: 15px;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    display: none;
  }

  .center-nav.active {
    display: flex;
  }

  .center-nav li {
    width: 100%;
  }

  .nav-btn {
    width: 100%;
    justify-content: center;
    padding: 12px 24px;
    font-size: 1rem;
  }

  /* Social nav stays on right */
  .social-nav {
    gap: 12px;
  }

  .social-icon {
    font-size: 20px;
    width: 36px;
    height: 36px;
  }

  /* Show mobile menu toggle */
  .mobile-menu-toggle {
    display: block;
  }
}

/* ========================================
   MOBILE STYLES (≤767px)
   ======================================== */
@media screen and (max-width: 767px) {
  .nav-wrapper {
    padding: 12px 15px;
  }

  .brand-logo {
    font-size: 0.9rem;
  }

  .brand-logo span {
    max-width: 180px;
  }

  .brand-logo i {
    font-size: 18px;
  }

  .center-nav {
    gap: 10px;
    margin-top: 12px;
    padding-top: 12px;
  }

  .nav-btn {
    padding: 10px 20px;
    font-size: 0.9rem;
  }

  .nav-btn i {
    font-size: 16px;
  }

  .social-nav {
    gap: 10px;
  }

  .social-icon {
    font-size: 18px;
    width: 32px;
    height: 32px;
  }
}

/* ========================================
   EXTRA SMALL MOBILE (≤480px)
   ======================================== */
@media screen and (max-width: 480px) {
  .nav-wrapper {
    padding: 10px 12px;
  }

  .brand-logo {
    font-size: 0.85rem;
    gap: 6px;
  }

  .brand-logo span {
    max-width: 140px;
  }

  .brand-logo i {
    font-size: 16px;
  }

  .social-nav {
    gap: 8px;
  }

  .social-icon {
    font-size: 16px;
    width: 30px;
    height: 30px;
  }

  .mobile-menu-toggle {
    font-size: 24px;
  }
}

/* ========================================
   MODAL & CERTIFICATE STYLES
   ======================================== */
.modal {
  max-height: 90%;
}

.modal-content {
  padding: 24px;
}

.certificate-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

.certificate-item {
  text-align: center;
  padding: 15px;
  border-radius: 8px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  background: #f9f9f9;
}

.certificate-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

.certificate-item img {
  width: 100%;
  height: auto;
  border-radius: 4px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

@media screen and (max-width: 767px) {
  .certificate-grid {
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 15px;
  }

  .certificate-item {
    padding: 10px;
  }
}

/* ========================================
   ACCESSIBILITY & UTILITIES
   ======================================== */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

/* Focus states for accessibility */
.nav-btn:focus,
.social-icon:focus,
.mobile-menu-toggle:focus {
  outline: 2px solid #3f51b5;
  outline-offset: 2px;
}
