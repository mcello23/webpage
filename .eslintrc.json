{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true,
    "jquery": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["html"],
  "rules": {
    "no-unused-vars": ["warn"],
    "no-undef": "error"
  },
  "ignorePatterns": [
    "**/js/materialize*.js",
    "**/css/materialize*.css",
    "**/jbcore/**",
    "*.html"
  ],
  "overrides": [
    {
      "files": ["*.html"],
      "parser": "eslint-plugin-html/parser"
    }
  ]
}
